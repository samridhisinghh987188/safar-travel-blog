{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*\\.(?:js|css|json|jpg|jpeg|png|gif|ico|svg))$",
      "dest": "/$1"
    },
    {
      "src": "^/.*",
      "dest": "/index.html"
    }
  ]
}
